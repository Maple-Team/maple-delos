{
  "version": "0.2.0",
  "configurations": [
    //
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Main",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "start:debug", "--", "--inspect-brk"],
      "autoAttachChildProcesses": true,
      "restart": true,
      "sourceMaps": true,
      "stopOnEntry": false,
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/packages/main/.env.development",
      "cwd": "${workspaceRoot}/packages/main"
    }
  ]
}
